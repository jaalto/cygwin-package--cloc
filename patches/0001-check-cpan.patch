 cloc |   24 ++++++++++++++++++++++++
 1 files changed, 24 insertions(+), 0 deletions(-)
 mode change 100644 => 100755 cloc

diff --git a/cloc b/cloc
old mode 100644
new mode 100755
index fb8674b..b07bdc4
--- a/cloc
+++ b/cloc
@@ -48,6 +48,30 @@ use File::Spec;
 use IO::File;
 use POSIX "strftime";
 
+BEGIN
+{
+    my @need = qw
+    (
+        Algorithm::Diff
+        Regexp::Common
+    );
+
+    my @list;
+
+    for ( @need )
+    {
+        eval "use $_;" ;
+        push @list, $_   if $@;  # Eval error
+    }
+
+    if ( @list )
+    {
+        die q([FATAL] Perl CPAN modules are needed. Please install them with:
+
+              cpan ) . qq(@list\n);
+    }
+}
+
 # Digest::MD5 isn't in the standard distribution. Use it only if installed.
 my $HAVE_Digest_MD5 = 0;
 eval "use Digest::MD5;";
